<odoo>
    <data>
        <record id="rigging_canopy_action" model="ir.actions.act_window">
            <field name="name">Canopy</field>
            <field name="res_model">rigging.canopy</field>
            <field name="view_mode">tree,form</field>
        </record>
    


        <record id="rigging_canopy_view" model="ir.ui.view">
            <field name="name">rigging.canopy.tree</field>
            <field name="model">rigging.canopy</field>
            <field name="arch" type="xml">
                <tree >
                    <field name="name" string="SerialN"/>
                    <field name="serial_id" string="Serial"/>
                    <field name="model_id" string="Model"/>
                    <field name="size_id" string="Size"/>
                    <field name="dom" string="DOM"/>
                    <field name="type_id" string="Type"/>
                    <field name="status_id" string="Status"/>
                    <field name="mounted" string="Mounted"/>
                    <field name="location" string="Location"/>

                </tree>
            </field>
        </record>

        <record id="rigging_canopy_view_form" model="ir.ui.view">
            <field name="name">rigging.canopy.view.form</field>
            <field name="model">rigging.canopy</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <h1>header</h1>
                    </header>
                    <sheet>

                        <group>
                            <field name="name"/>

                            <field name="serial_id" string="Serial"/>
                            <field name="model_id" string="Model" widget="selection"/>
                            <field name="size_id" widget="selection"/>
                            <field name="dom"/>
                            <field name='rigging_component' string="Components"/>
                            <field name="type_id" widget="selection"/>
                            <field name="status_id" widget="selection"/>
                            <field name="is_mounted" widget="boolean_toggle"/>
                            <field name="rig_id" widget="selection"/>
                            <button name="action_umount_canopy" class="oe_highlight" type="object" string="Umount" confirm="Confirm?"/>
                        </group>
                        
                        <group>
                            <field name="rigging_ids">
                                <form>
                                    <field name="name" string="Name"/>
                                    <field name="rigging_type" tring="Type"/>
                                    <field name="date" string="Date"/>
                                    <field name='description' string='Description'/>
                                </form>
                            </field>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
