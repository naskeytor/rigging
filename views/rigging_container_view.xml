<odoo>
    <data>
        <record id="rigging_container_action" model="ir.actions.act_window">
            <field name="name">Container</field>
            <field name="res_model">rigging.container</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="rigging_container_view" model="ir.ui.view">
            <field name="name">rigging.container.tree</field>
            <field name="model">rigging.container</field>
            <field name="arch" type="xml">
                <tree >
                    <field name="name" string="SerialN"/>
                    <field name="model_id" string="Model"/>
                    <field name="size_id" string="Size"/>
                    <field name="type_id" string="Type"/>
                    <field name="status_id" string="Status"/>
                </tree>
            </field>
        </record>
        <record id="rigging_container_view_form" model="ir.ui.view">
            <field name="name">rigging.containe.view.form</field>
            <field name="model">rigging.container</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <h1>header</h1>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="model_id" string="Model"/>
                            <field name="size_id"/>
                            <field name="dom"/>
                            <field name="type_id"/>
                            <field name="status_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
